{
	"name": "d1-orm",
	"version": "0.0.0",
	"description": "A simple strictly typed ORM for Cloudflare's D1 product",
	"keywords": [
		"orm",
		"cloudflare",
		"d1",
		"sqlite",
		"typescript",
		"workers"
	],
	"homepage": "https://github.com/Interactions-as-a-Service/d1-orm#readme",
	"bugs": {
		"url": "https://github.com/Interactions-as-a-Service/d1-orm/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Interactions-as-a-Service/d1-orm.git"
	},
	"license": "ISC",
	"author": "Skye-31",
	"main": "lib/index.js",
	"files": [
		"lib",
		"src"
	],
	"scripts": {
		"check:format": "prettier . --check --ignore-unknown --end-of-line lf",
		"check:lint": "eslint src/*.ts --cache --cache-strategy content --max-warnings=0",
		"prettify": "prettier . --write --ignore-unknown --end-of-line lf",
		"prepublish": "tsc",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 2020,
			"project": "tsconfig.json",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"import",
			"unused-imports"
		],
		"overrides": [
			{
				"files": [
					"*.ts"
				],
				"extends": [
					"eslint:recommended",
					"plugin:@typescript-eslint/recommended",
					"plugin:import/typescript"
				],
				"rules": {
					"no-mixed-spaces-and-tabs": [
						"error",
						"smart-tabs"
					],
					"@typescript-eslint/consistent-type-imports": "error",
					"@typescript-eslint/no-explicit-any": "error",
					"@typescript-eslint/no-unused-vars": "off",
					"import/order": [
						"warn",
						{
							"groups": [
								"builtin",
								"external",
								"internal",
								"parent",
								"sibling",
								"index",
								"object",
								"type"
							],
							"alphabetize": {
								"order": "asc"
							}
						}
					],
					"unused-imports/no-unused-imports": "error",
					"unused-imports/no-unused-vars": [
						"warn",
						{
							"vars": "all",
							"varsIgnorePattern": "^_",
							"args": "after-used",
							"argsIgnorePattern": "^_"
						}
					]
				}
			}
		],
		"ignorePatterns": [
			"lib",
			"node_modules"
		],
		"root": true
	},
	"devDependencies": {
		"@changesets/cli": "^2.24.4",
		"@cloudflare/workers-types": "^3.15.0",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"prettier": "^2.7.1",
		"prettier-plugin-packagejson": "^2.2.18",
		"typescript": "^4.8.2"
	}
}
